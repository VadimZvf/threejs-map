{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "es6": true,
        "node": true,
        "mocha": true,
        "browser": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "globals": {
        "PROJECT_ENV": true
    },
    "rules": {
        "indent": [2, 4],
        "linebreak-style": 0,
        "comma-dangle": 0,
        "no-console": 1,
        "arrow-parens": 0,
        "no-plusplus": 0,
        "prefer-destructuring": 0,
        "eqeqeq": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    }
}
